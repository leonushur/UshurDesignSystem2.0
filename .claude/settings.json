{
  "dangerouslySkipPermissions": true,
  "model": "opus",
  "mcpServers": {
    "figma-desktop": {
      "type": "http",
      "url": "http://127.0.0.1:3845/mcp"
    }
  },
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Bash(npm run *)",
      "Bash(npm install *)",
      "Bash(npm ls *)",
      "Bash(npm outdated *)",
      "Bash(npx *)",
      "Bash(bun *)",
      "Bash(node *)",
      "Bash(find *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(grep *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(mkdir *)",
      "Bash(rm *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(curl *)",
      "Bash(lsof *)",
      "Bash(pgrep *)",
      "Bash(pkill *)",
      "Bash(kill *)",
      "Bash(sleep *)",
      "Bash(du *)",
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(vercel *)",
      "Bash(open *)",
      "mcp__figma-desktop__get_design_context",
      "mcp__figma-desktop__get_screenshot",
      "mcp__figma-desktop__get_variable_defs",
      "mcp__figma-desktop__get_metadata",
      "mcp__figma-desktop__get_figjam",
      "mcp__figma-desktop__create_design_system_rules"
    ]
  },
  "allowedTools": [
    "codebase-explorer",
    "figma-implementer",
    "storybook-creator",
    "storybook-tester",
    "design-system-auditor",
    "code-reviewer",
    "vercel-deployment-verifier",
    "browser-debugger",
    "storybook-monitor"
  ]
}
